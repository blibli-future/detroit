root = true

[*]
end_of_line = lf
insert_final_newline = true

# Style according to Google Java Style Guide
# https://google.github.io/styleguide/javaguide.html
[*.java]
indent_style = space
indent_size = 4 # TODO should be 2
trim_trailing_whitespace = true
max_line_length = 100

[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 100
